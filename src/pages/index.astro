---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from '../sections/HeroSection.astro';
import ServicesSection from '../sections/ServicesSection.astro';
import SeriousSection from '../sections/SeriousSection.astro';
import { PlansSection } from '../sections/PlansSection';
import TeamSection from '../sections/TeamSection.astro';
import CreditsSection from '../sections/CreditsSection';
import FeaturedArticlesSection from '../sections/FeaturedArticlesSection.astro';
import SubscriptionSection from '../sections/SubscriptionSection';
import FAQSection from '../sections/FAQSection';
import * as i18n from '../i18n/utils';

const lang = i18n.getLangFromUrl(Astro.url);
---

<MainLayout title="Mobula Studio - Marketing Digital">
  <!-- Hero Section - Astro estático -->
  <section id="inicio" class="relative">
    <HeroSection />
  </section>

  <!-- Services Section - React interactivo (carousel) -->
  <section id="servicios" class="relative py-12 lg:py-20">
    <ServicesSection />
  </section>

  <!-- Serious Section - "Lo decimos en serio" con proyectos -->
  <section id="proyectos" class="relative">
    <SeriousSection />
  </section>
  <!-- Plans Section - React interactivo (carousel + subscription) -->
  <section id="planes" class="relative py-12 lg:py-20 bg-[#faf1ea]">
    <PlansSection client:load lang={lang} />
  </section>
  <!-- Team Section - Equipo de expertos -->
  <section id="equipo" class="relative">
    <TeamSection />
  </section>
  <!-- Credits Section - React para mostrar cómo funcionan los créditos -->
  <section id="creditos" class="relative">
    <CreditsSection client:load lang={lang} />
  </section>
  <!-- Featured Articles Section - Carousel de artículos destacados -->
  <section class="relative">
    <FeaturedArticlesSection />
  </section>
  <!-- Subscription Section - Formulario de suscripción -->
  <section id="suscribirse" class="relative">
    <SubscriptionSection client:load lang={lang} />
  </section>

  <!-- FAQ Section - Preguntas frecuentes -->
  <section id="faq" class="relative">
    <FAQSection client:load lang={lang} />
  </section>
</MainLayout>


<script>

  document.addEventListener('astro:page-load', () => {
    console.log('Página cargada correctamente');
  });
</script>
