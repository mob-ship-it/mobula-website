---
import MainLayout from '../../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import * as i18n from '../../i18n/utils';

import ecpWallpaper from '../../assets/images/projects/ECP-consulting-group/ECP-wallpaper.png';
import ecpMobile from '../../assets/images/projects/ECP-consulting-group/ECP-mobile-intro.png';
import ecpFirstSection from '../../assets/images/projects/ECP-consulting-group/first-section-image.png';
import personasQueSuman from '../../assets/images/projects/ECP-consulting-group/personas-que-suman.png';
import grid1 from '../../assets/images/projects/ECP-consulting-group/grid-1.png';
import grid2 from '../../assets/images/projects/ECP-consulting-group/grid-2.png';
import graphics from '../../assets/images/projects/ECP-consulting-group/graphics.png';
import ellipse25Url from '../../assets/images/projects/ECP-consulting-group/Ellipse 25.svg?url';
import andFinancial from '../../assets/images/projects/ECP-consulting-group/and-financial-solutions.png';
import revistas1 from '../../assets/images/projects/ECP-consulting-group/revistas-1.jpg';
import revistas2 from '../../assets/images/projects/ECP-consulting-group/revistas-2.png';
import ProjectsCarousel from '../../components/ProjectsCarousel.jsx';
import ecpImage from '../../assets/images/projects/legal-law-office/ECP.png';
import lineaLawImage from '../../assets/images/projects/legal-law-office/line-law.png';
import kaseCabImage from '../../assets/images/projects/KaseCap/KaseCab-image-carousel.png';
import stanzza from '../../assets/images/projects/Stanzza/Stanzza-carousel-image.png';
import vector22 from '../../assets/images/projects/legal-law-office/Vector 22.png';
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);
const translatePath = i18n.useTranslatedPath(lang);
---

<MainLayout title={t('ecp.seoTitle')}>
  <section class="bg-[#faf1ea] min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-10 pb-10">

      <div class="mb-10">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl">
          <Image
            src={ecpWallpaper}
            alt="ECP Consulting Group - Project"
            width={1600}
            height={1000}
            format="webp"
            quality={90}
            class="hidden lg:block w-full h-auto object-cover"
            loading="eager"
          />
          <Image
            src={ecpMobile}
            alt="ECP Consulting Group - Project"
            width={800}
            height={1000}
            format="webp"
            quality={90}
            class="lg:hidden w-full h-auto object-cover"
            loading="eager"
          />
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-stretch mb-10">
        <div class="lg:col-span-7">
          <div class="flex flex-col lg:flex-row lg:items-start lg:gap-4 mb-4">
            <h1 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-3xl md:text-4xl lg:text-5xl leading-tight text-center lg:text-left">
              {t('ecp.heading')}
            </h1>
              <a href="https://www.ecpconsultgroup.com/" target="_blank" rel="noopener" class="hidden lg:inline-flex items-center gap-2 bg-white text-[#211ee1] [font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-sm px-5 py-2 rounded-full hover:bg-[#faf1ea] transition-colors whitespace-nowrap self-start mt-1">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
                  <path d="M14 3h7v7M10 14L21 3M21 21H3V3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              Visit site
            </a>
          </div>
          <!-- Mobile CTA directly under the title -->
          <div class="mt-4 lg:hidden text-center">
              <a href="https://www.ecpconsultgroup.com/" target="_blank" rel="noopener" class="inline-flex items-center gap-2 bg-white text-[#211ee1] [font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-base md:text-lg px-6 py-2 rounded-full hover:bg-[#faf1ea] transition-colors">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none">
                  <path d="M14 3h7v7M10 14L21 3M21 21H3V3" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              Visit site
            </a>
          </div>
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-4 max-w-2xl mx-auto lg:mx-0 text-center lg:text-left">
            {t('ecp.p1')}
          </p>
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-0 max-w-2xl mx-auto lg:mx-0 text-center lg:text-left">
            {t('ecp.p2')}
          </p>

          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed max-w-3xl mx-auto text-center lg:text-left lg:mx-0">
            {t('ecp.p3')}
          </p>

          <div class="hidden lg:grid grid-cols-2 gap-8 md:gap-12 max-w-lg lg:max-w-none mt-8">
            <div class="text-left">
              <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/60 text-sm md:text-base mb-2">
                {t('project.year')}
              </p>
              <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-2xl md:text-3xl">
                2025
              </p>
            </div>
            <div class="text-left">
              <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/60 text-sm md:text-base mb-2">
                {t('project.industry')}
              </p>
              <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-xl md:text-2xl leading-tight">
                {t('ecp.industry')}
              </p>
            </div>
          </div>
        </div>
        <div class="lg:col-span-5 hidden lg:block">
          <div class="rounded-3xl overflow-hidden shadow-xl mx-auto lg:mx-0 h-full">
            <Image
              src={ecpFirstSection}
              alt="Preview ECP section 1"
              width={900}
              height={1100}
              format="webp"
              quality={85}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-8 md:gap-12 max-w-lg mx-auto lg:hidden mb-12">
        <div class="text-center">
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/60 text-sm md:text-base mb-2">
            {t('project.year')}
          </p>
          <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-2xl md:text-3xl">
            2025
          </p>
        </div>
        <div class="text-center">
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/60 text-sm md:text-base mb-2">
            {t('project.industry')}
          </p>
          <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-xl md:text-2xl leading-tight">
            {t('ecp.industry')}
          </p>
        </div>
      </div>

      <div class="mb-12">
        <div class="rounded-3xl overflow-hidden shadow-2xl">
          <Image
            src={personasQueSuman}
            alt="People who add value"
            width={1600}
            height={1100}
            format="webp"
            quality={90}
            class="w-full h-auto object-cover"
            loading="lazy"
          />
        </div>
      </div>

      <div class="grid grid-cols-12 gap-8 items-stretch mb-16">
        <div class="col-span-12 lg:col-span-6">
          <div class="rounded-3xl overflow-hidden shadow-xl bg-[#e9edf3] h-[420px] md:h-[460px] flex items-center justify-center">
            <Image
              src={grid1}
              alt="Mobile mockup"
              width={1200}
              height={1200}
              format="webp"
              quality={90}
              class="max-h-[88%] w-auto object-contain"
              loading="lazy"
            />
          </div>
        </div>
        <div class="col-span-12 lg:col-span-6">
          <div class="rounded-3xl overflow-hidden shadow-xl">
            <Image
              src={grid2}
              alt="Business cards"
              width={1400}
              height={1100}
              format="webp"
              quality={90}
              class="w-full h-[420px] md:h-[460px] object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>

      <div class="mb-12">
        <div class="rounded-3xl overflow-hidden shadow-2xl">
          <Image
            src={graphics}
            alt="ECP brand graphics"
            width={1600}
            height={1000}
            format="webp"
            quality={90}
            class="w-full h-auto object-cover"
            loading="lazy"
          />
        </div>
      </div>

      <div class="mb-12">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl bg-[#0a8f95]">
          <div class="absolute inset-0 pointer-events-none">
            <svg class="absolute left-[-36px] top-[-24px] h-[150%] w-auto" viewBox="0 0 300 600" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M60 20C22 96 22 146 42 206c30 90 122 82 162 142 40 60 18 140-46 182" stroke="#B07BFF" stroke-width="48" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <svg class="absolute right-[-36px] bottom-[-24px] h-[150%] w-auto rotate-180" viewBox="0 0 300 600" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M60 20C22 96 22 146 42 206c30 90 122 82 162 142 40 60 18 140-46 182" stroke="#B07BFF" stroke-width="48" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </div>

          <div class="relative px-6 py-10 md:px-12 md:py-12">
            <p class="[font-family:'Be_Vietnam',Helvetica] text-white text-lg md:text-[20px] leading-relaxed text-center max-w-5xl mx-auto">
              “Working with Mobula has been a very positive and enriching experience. We felt supported at all times by a committed team that understood our needs and helped us achieve concrete results. The benefits for our company have been remarkable, and above all, we have the peace of mind of knowing we have a trusted ally.”
            </p>
            <div class="mt-8 flex flex-col items-center">
              <img src={ellipse25Url} alt="Brittany Rojas" width="56" height="56" class="w-14 h-14 rounded-full shadow-md" loading="lazy" />
              <p class="[font-family:'Be_Vietnam',Helvetica] text-white text-sm md:text-base mt-3">
                <span class="font-semibold">Brittany Rojas</span>
                <span> – Head of Finance Division</span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="mb-4">
        <div class="rounded-3xl overflow-hidden shadow-2xl">
          <Image
            src={andFinancial}
            alt="and financial solutions"
            width={1600}
            height={900}
            format="webp"
            quality={90}
            class="w-full h-auto object-cover"
            loading="lazy"
          />
        </div>
      </div>

      <div class="grid grid-cols-12 gap-8 items-stretch mb-20">
        <div class="col-span-12 lg:col-span-7">
          <div class="rounded-3xl overflow-hidden shadow-2xl">
            <Image
              src={revistas1}
              alt="Open brochure"
              width={1600}
              height={1200}
              format="webp"
              quality={90}
              class="w-full h-[420px] md:h-[460px] object-cover"
              loading="lazy"
            />
          </div>
        </div>
        <div class="col-span-12 lg:col-span-5">
          <div class="rounded-3xl overflow-hidden shadow-2xl">
            <Image
              src={revistas2}
              alt="Closed brochure"
              width={1400}
              height={1100}
              format="webp"
              quality={90}
              class="w-full h-[420px] md:h-[460px] object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>

      <div class="hidden lg:block mb-16">
        <h3 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-6">
          {t('project.featuredMore')}
        </h3>
        {(() => {
          const featuredProjects = [
            { id: 'linea', title: 'Linea Law', subtitle: 'Social Media', image: lineaLawImage, href: translatePath('/LegalLawOffice') },
            { id: 'kasecab', title: 'KaseCab Americas', subtitle: 'Branding', image: kaseCabImage, href: translatePath('/KaseCab') },
            { id: 'stanzza', title: 'Stanzza Senior Living', subtitle: 'Performance', image: stanzza, href: translatePath('/Stanzza') },
          ];
          return <ProjectsCarousel client:load projects={featuredProjects} />;
        })()}
      </div>

      <div class="mb-8 lg:hidden">
        <h3 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-8">
          {t('project.featuredMore')}
        </h3>
      </div>

      <div class="space-y-8 mb-12 lg:hidden">
        <a href={translatePath('/LegalLawOffice')}>
          <div class="rounded-3xl overflow-hidden shadow-lg mb-4">
            <Image
              src={lineaLawImage}
              alt="LINEA LAW Project"
              width={1200}
              height={800}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
          <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-lg">
            Linea Law
          </p>
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/70 text-base">
            Social Media
          </p>
        </a>

        <a href={translatePath('/KaseCab')}>
          <div class="rounded-3xl overflow-hidden shadow-lg mb-4">
            <Image
              src={kaseCabImage}
              alt="KaseCab Project"
              width={1200}
              height={800}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
          <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-lg">
            KaseCab Americas
          </p>
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/70 text-base">
            Branding
          </p>
        </a>

        <a href={translatePath('/Stanzza')}>
          <div class="rounded-3xl overflow-hidden shadow-lg mb-4">
            <Image
              src={stanzza}
              alt="Stanzza Project"
              width={1200}
              height={800}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover"
              loading="lazy"
            />
          </div>
          <p class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-[#13243c] text-lg">
            Stanzza
          </p>
          <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c]/70 text-base">
            Performance
          </p>
        </a>
      </div>

      <div class="relative bg-[#211ee1] rounded-3xl overflow-hidden mb-12">
        <div class="relative z-10 px-8 py-10 md:px-12 md:py-12 lg:py-16">
          <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-white text-3xl md:text-4xl lg:text-5xl leading-tight mb-6 text-left">
            {t('subscribe.banner')}
          </h2>
          <a 
            href={translatePath('/#planes')} 
            class="inline-block bg-white text-[#211ee1] [font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-lg md:text-xl px-10 md:px-12 py-3.5 md:py-4 rounded-full hover:bg-[#faf1ea] transition-colors duration-300"
          >
            {t('cta.seePlans')}
          </a>
        </div>

        <div class="pointer-events-none absolute inset-y-0 right-0 hidden md:flex items-center">
          <Image
            src={vector22}
            alt="Decorative shape"
            width={700}
            height={700}
            class="h-[140%] w-auto -mr-10 -rotate-90"
            loading="lazy"
          />
        </div>

        <div class="absolute bottom-0 left-0 right-0 md:hidden">
          <Image
            src={vector22}
            alt="Decorative waves"
            width={1200}
            height={200}
            class="w-full h-auto"
            loading="lazy"
          />
        </div>
      </div>

    </div>
  </section>
</MainLayout>
