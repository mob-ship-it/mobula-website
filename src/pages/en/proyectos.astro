---
import MainLayout from '../../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import * as i18n from '../../i18n/utils';

import project1 from '../../assets/images/projects/legal-law-office/LineLaw-wallpaper.png';
import project2 from '../../assets/images/projects/ECP-consulting-group/ECP-wallpaper.png';
import project3 from '../../assets/images/projects/KaseCap/KaseCap-intro.png';
import project4 from '../../assets/images/projects/Stanzza/Stanzza-intro.png';
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);
const translatePath = i18n.useTranslatedPath(lang);
---

<MainLayout title={t('projects.seoTitle')}>
  <section class="bg-[#faf1ea] min-h-screen py-16">
    
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="text-center mb-16">
        <h1 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-4xl md:text-5xl lg:text-6xl leading-tight mb-6">
          {t('projects.heading')}
        </h1>
        <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-lg md:text-xl leading-relaxed max-w-3xl mx-auto">
          {t('projects.description')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
        
        <a 
          href={translatePath('/LegalLawOffice')} 
          class="group block bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative overflow-hidden">
            <Image
              src={project1}
              alt="Legal Law Office Project"
              width={800}
              height={600}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          
          <div class="p-6 md:p-8">
            <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-4 group-hover:text-[#211ee1] transition-colors">
              Legal Law Office
            </h2>
            <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-4">
              {t('projects.cards.legal.desc')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Meta
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Google
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                LinkedIn
              </span>
            </div>
          </div>
        </a>

        {/* Proyecto 4 - Stanzza */}
        <a 
          href={translatePath('/Stanzza')} 
          class="group block bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative overflow-hidden">
            <Image
              src={project4}
              alt="Stanzza Project"
              width={800}
              height={600}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          
          <div class="p-6 md:p-8">
            <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-4 group-hover:text-[#211ee1] transition-colors">
              Stanzza
            </h2>
            <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-4">
              {t('projects.cards.stanzza.desc')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Social Ads
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Performance
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                YouTube
              </span>
            </div>
          </div>
        </a>

        {/* Proyecto 2 - ECP Consulting Group */}
        <a 
          href={translatePath('/ECPConsultingGroup')} 
          class="group block bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative overflow-hidden">
            <Image
              src={project2}
              alt="ECP Consulting Group Project"
              width={800}
              height={600}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          
          <div class="p-6 md:p-8">
            <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-4 group-hover:text-[#211ee1] transition-colors">
              ECP Consulting Group
            </h2>
            <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-4">
              {t('projects.cards.ecp.desc')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Branding
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Identity
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Design
              </span>
            </div>
          </div>
        </a>

        {/* Proyecto 3 - KaseCab */}
        <a 
          href={translatePath('/KaseCab')} 
          class="group block bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2"
        >
          <div class="relative overflow-hidden">
            <Image
              src={project3}
              alt="KaseCab Project"
              width={800}
              height={600}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <div class="p-6 md:p-8">
            <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-4 group-hover:text-[#211ee1] transition-colors">
              KaseCab
            </h2>
            <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-4">
              {t('projects.cards.kasecab.desc')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Branding
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Identity
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Design
              </span>
            </div>
          </div>
        </a>
      </div>
    </div>
    
  </section>
</MainLayout>
