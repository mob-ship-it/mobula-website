---
import MainLayout from '../../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import * as i18n from '../../i18n/utils';

import project1 from '../../assets/images/projects/legal-law-office/LineLaw-wallpaper.png';
import project2 from '../../assets/images/projects/ECP-consulting-group/ECP-wallpaper.png';
import project3 from '../../assets/images/projects/KaseCap/KaseCap-intro.png';
import project4 from '../../assets/images/projects/Stanzza/Stanzza-intro.png';
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);
const translatePath = i18n.useTranslatedPath(lang);
---

<MainLayout title={t('projects.seoTitle')}>
  <section class="bg-[#faf1ea] min-h-screen py-16">
    
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <div class="text-center mb-16">
        <h1 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-4xl md:text-5xl lg:text-6xl leading-tight mb-6">
          {t('projects.heading')}
        </h1>
        <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-lg md:text-xl leading-relaxed max-w-3xl mx-auto">
          {t('projects.description')}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">

        <a href={translatePath('/LegalLawOffice')} class="group block bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 cursor-pointer">
          <div class="relative overflow-hidden">
            <Image
              src={project1}
              alt="Linea Law Project"
              width={800}
              height={600}
              format="webp"
              quality={85}
              class="w-full h-auto object-cover group-hover:scale-105 transition-transform duration-300"
            />
          </div>

          <div class="p-6 md:p-8">
            <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-2xl md:text-3xl mb-4 group-hover:text-[#211ee1] transition-colors">
              {t('projects.cards.legal.title')}
            </h2>
            <p class="[font-family:'Be_Vietnam',Helvetica] text-[#13243c] text-base md:text-lg leading-relaxed mb-4">
              {t('projects.cards.legal.desc')}
            </p>
            <div class="flex flex-wrap gap-2">
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Meta
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                Google
              </span>
              <span class="[font-family:'Be_Vietnam',Helvetica] text-sm bg-[#211ee1]/10 text-[#211ee1] px-3 py-1 rounded-full">
                LinkedIn
              </span>
            </div>

            <div class="mt-4 text-sm text-[#13243c]">
              <span class="inline-flex items-center gap-2 text-[#0b4aa6] underline" onclick="event.preventDefault(); event.stopPropagation(); window.open('https://linealaw.com/', '_blank');">
                <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                  <path d="M14 3h7v7" stroke="#0b4aa6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M10 14L21 3" stroke="#0b4aa6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M21 21H3V3" stroke="#0b4aa6" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="[font-family:'Be_Vietnam',Helvetica] font-medium">{t('projects.more.legal')}</span>
              </span>
            </div>
          </div>
        </a>

        <a href={translatePath('/Stanzza')} class="group block bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 cursor-pointer">
          <div class="relative overflow-hidden">
            <Image
              src={project4}
