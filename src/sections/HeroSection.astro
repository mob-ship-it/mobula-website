---
import { Image } from 'astro:assets';
import mobulaLogo from '../assets/images/logo/mobula-logo-dark.png';
import * as i18n from '../i18n/utils';
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);
const translatePath = i18n.useTranslatedPath(lang);
---

<div class="w-full">
  
  <div class="lg:hidden w-full flex items-center justify-center px-6 py-20 md:py-24">
    <div class="max-w-xl text-center mx-auto">
      
      <h1 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-4xl md:text-5xl leading-tight mb-6">
        {t('hero.title.line1')}<br />
        {t('hero.title.line2')}
      </h1>

      <p class="[font-family:'Be_Vietnam',Helvetica] font-normal text-[#13243c] text-base md:text-lg leading-relaxed mb-8 max-w-xl mx-auto">
        {t('hero.subtitle')}
      </p>
      <a 
        href={translatePath(`/#${t('anchors.plans' as any)}`)}
        style="border: 2px solid #4e3aff;"
        class="inline-block [font-family:'Be_Vietnam',Helvetica] font-semibold text-[#4e3aff] text-base md:text-lg rounded-full px-12 md:px-14 py-3 hover:bg-[#4e3aff] hover:text-white transition-all duration-300 mx-auto"
      >
        {t('hero.cta')}
      </a>

    </div>
  </div>

  <div class="hidden lg:block w-full overflow-hidden">
    <div class="w-full px-6 lg:px-8 xl:px-12 2xl:px-16 py-2 lg:py-3 xl:py-4">
      
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 lg:gap-8 items-center">
        
  <div class="lg:col-span-6 xl:col-span-5 pl-6 lg:pl-8 xl:pl-12 relative z-10 mt-4 lg:mt-8">

          <div class="mb-3 lg:mb-4">
            <Image
              src={mobulaLogo}
              alt="Mobula Estudio Logo"
              width={600}
              height={320}
              format="webp"
              quality={85}
              class="h-48 xl:h-52 2xl:h-56 w-auto"
              loading="eager"
            />
          </div>

          <h1 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-[#13243c] text-4xl lg:text-5xl xl:text-6xl 2xl:text-6xl leading-tight mb-4 max-w-4xl text-left">
            {t('hero.title.line1')}<br />
            {t('hero.title.line2')}
          </h1>

          <p class="[font-family:'Be_Vietnam',Helvetica] font-normal text-[#13243c] text-base lg:text-lg xl:text-lg leading-relaxed mb-5 lg:mb-6 max-w-2xl text-left">
            {t('hero.subtitle')}
          </p>

          <a 
            href={translatePath(`/#${t('anchors.plansCards' as any)}`)}
            class="inline-block [font-family:'Be_Vietnam',Helvetica] font-semibold text-white bg-[#211ee1] text-base lg:text-lg rounded-full px-10 lg:px-12 xl:px-14 py-3 lg:py-3 xl:py-3.5 w-full max-w-2xl text-center hover:bg-[#1915c7] transition-all duration-300"
          >
            {t('hero.cta')}
          </a>

        </div>

        <div class="lg:col-span-6 xl:col-span-7"></div>

      </div>

    </div>
  </div>
</div>
