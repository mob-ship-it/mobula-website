---
import { Image } from 'astro:assets';
import TeamCarousel from '../components/TeamCarousel.astro';
import arielaDengo from '../assets/images/team/ariela-dengo.png';
import erickV from '../assets/images/team/erick-vasquez.png';
import gabrielC from '../assets/images/team/gabriel-chavarria.png';
import gavrielA from '../assets/images/team/gavriel-arias.png';
import jorgeC from '../assets/images/team/jorge-c.webp';
import * as i18n from '../i18n/utils';

const teamMembers = [
  {
    id: 1,
    name: "Ariela Dengo",
    role: "Founder - Strategy Manager & Content Lead",
    image: arielaDengo
  },
  {
    id: 2,
    name: "Jorge Cascante",
    role: "Founder - Web Developer",
    image: jorgeC
  },
  {
    id: 3,
    name: "Erick Vásquez",
    role: "Paid Media Specialist",
    image: erickV
  },
  {
    id: 4,
    name: "Gabriel Chavarría",
    role: "Associate Audiovisual Producer",
    image: gabrielC
  },
  {
    id: 5,
    name: "Gavriel Arias",
    role: "Creative Producer",
    image: gavrielA
  }
];
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);
---

<section class="bg-[#faf1ea] py-12 md:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8 md:mb-12">
      <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-3xl md:text-4xl lg:text-5xl text-[#13243c] mb-4">
        {t('team.title')}
      </h2>
      <p class="[font-family:'Be_Vietnam',Helvetica] text-base md:text-lg text-[#13243c] max-w-3xl leading-relaxed lg:whitespace-nowrap">
        {t('team.description')}
      </p>
    </div>

    <TeamCarousel members={teamMembers} />
  </div>
</section>
