---
import { ServicesCarousel } from "../components/ServicesCarousel";
import * as i18n from '../i18n/utils';
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);

// Importar imágenes de servicios desde assets
import marketingImg from '../assets/images/services/marketin-y-estrategia.webp';
import marketingRightDecor from '../assets/images/services/marketing-right-decor.webp';
import conceptoRightDecor from '../assets/images/services/concepto-contenido-right-decor.webp';
import disenioRightDecor from '../assets/images/services/disenio-branding-right-decor.webp';
import animacionRightDecor from '../assets/images/services/animacion-produccion-right-decor.webp';
import webRightDecor from '../assets/images/services/web-experiencia-right-decor.webp';
import conceptoImg from '../assets/images/services/concepto-contenido.webp';
import disenioImg from '../assets/images/services/disenio-branding.webp';
import webImg from '../assets/images/services/web-y-experiencia.webp';
import animationAndProductionImg from '../assets/images/services/animacion-producción-audiovisual.webp';

const servicesEs = [
  {
    title: "Marketing & Estrategia",
    image: marketingImg.src,
    color: "#211EE1",
    bgGradient: "from-[#211EE1] to-[#4A47FF]",
    services: [
      "Marketing Digital",
      "Paid Media",
      "Posicionamiento de marca",
      "Email Marketing",
      "Conversión Estratégica"
    ],
    bgRight: marketingRightDecor.src,
    button: t('services.cta')
  },
  {
    title: "Concepto & Contenido", 
    image: conceptoImg.src,
    color: "#FF6262",
    bgGradient: "from-[#FF6262] to-[#FF9F9F]",
    services: [
      "Conceptualización Creativa",
      "Creación de Contenido (Digitales y Físicos)",
      "Copywriting y Storytelling",
      "Producción de Contenido Visual (AI, redes, piezas estáticas)"
    ],
    bgRight: conceptoRightDecor.src,
    button: t('services.cta')
  },
  {
    title: "Diseño & Branding",
    image: disenioImg.src, 
    color: "#008DA0",
    bgGradient: "from-[#008DA0] to-[#00B5C6]",
    services: [
      "Identidad de Marca (Branding)",
      "Diseño Gráfico",
      "Creación de Mockups Digitales",
      "Diseño de Empaques",
      "Diseño Editorial",
      "Packaging",
      "Signage"
    ],
    bgRight: disenioRightDecor.src,
    button: t('services.cta')
  },
  {
    title: "Animación & Producción Audiovisual",
    image: animationAndProductionImg.src,
    color: "#B794F6",
    bgGradient: "from-[#B794F6] to-[#D4B8FF]",
    services: [
      "Motion Graphics",
      "Animación 2D / 3D", 
      "Producción de Video (filmación y edición)",
      "Fotografía Profesional"
    ],
    bgRight: animacionRightDecor.src,
    bgRightPosition: 'right 0 top 15%',
    button: t('services.cta')
  },
  {
    title: "Web & Experiencia",
    image: webImg.src,
    color: "#1E3A5F",
    bgGradient: "from-[#1E3A5F] to-[#2A4B73]",
    services: [
      "Desarrollo Web",
      "Diseño Web & App",
      "Experiencia de Usuario (UX/UI)",
      "Posicionamiento SEO"
    ],
    bgRight: webRightDecor.src,
    button: t('services.cta')
  }
];

const servicesEn = [
  {
    title: "Marketing & Strategy",
    image: marketingImg.src,
    color: "#211EE1",
    bgGradient: "from-[#211EE1] to-[#4A47FF]",
    services: [
      "Digital Marketing",
      "Paid Media",
      "Brand Positioning",
      "Email Marketing",
      "Conversion Strategy"
    ],
    bgRight: marketingRightDecor.src,
    button: t('services.cta')
  },
  {
    title: "Concept & Content", 
    image: conceptoImg.src,
    color: "#FF6262",
    bgGradient: "from-[#FF6262] to-[#FF9F9F]",
    services: [
      "Creative Conceptualization",
      "Content Creation (digital and physical)",
      "Copywriting & Storytelling",
      "Visual Content Production (AI, social, static assets)"
    ],
    bgRight: conceptoRightDecor.src,
    button: t('services.cta')
  },
  {
    title: "Design & Branding",
    image: disenioImg.src, 
    color: "#008DA0",
    bgGradient: "from-[#008DA0] to-[#00B5C6]",
    services: [
      "Brand Identity (Branding)",
      "Graphic Design",
      "Digital Mockups",
      "Packaging Design",
      "Editorial Design",
      "Packaging",
      "Signage"
    ],
    bgRight: disenioRightDecor.src,
    button: t('services.cta')
  },
  {
    title: "Animation & Video Production",
    image: animationAndProductionImg.src,
    color: "#B794F6",
    bgGradient: "from-[#B794F6] to-[#D4B8FF]",
    services: [
      "Motion Graphics",
      "2D / 3D Animation", 
      "Video Production (filming & editing)",
      "Professional Photography"
    ],
    bgRight: animacionRightDecor.src,
    bgRightPosition: 'right 0 top 35%',
    button: t('services.cta')
  },
  {
    title: "Web & Experience",
    image: webImg.src,
    color: "#1E3A5F",
    bgGradient: "from-[#1E3A5F] to-[#2A4B73]",
    services: [
      "Web Development",
      "Web & App Design",
      "User Experience (UX/UI)",
      "SEO"
    ],
    bgRight: webRightDecor.src,
    button: t('services.cta')
  }
];

const services = lang === 'en' ? servicesEn : servicesEs;
---

<div class="w-full overflow-hidden">
  <div class="max-w-7xl mx-auto px-2 sm:px-4 md:px-6 lg:px-8 py-8 sm:py-12 lg:py-20">
    <!-- Unified container for title and carousel -->
    <div class="flex flex-col items-center justify-center w-full">
      <!-- Section Title -->
      <div class="text-center mb-10 sm:mb-12 md:mb-16 lg:mb-20">
        <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-black text-3xl sm:text-4xl md:text-5xl lg:text-6xl leading-tight whitespace-pre-line">
          {t('services.sectionTitle')}
        </h2>
      </div>

      <!-- Advanced Carousel - Centered and aligned with title -->
      <div class="w-full overflow-visible flex justify-center">
        <ServicesCarousel client:load slides={services} lang={lang} />
      </div>
    </div>
  </div>
</div>
