---
import { ServicesCarousel } from "../components/ServicesCarousel";

// Importar imágenes de servicios desde assets
import marketingImg from '../assets/images/services/marketin-y-estrategia.jpg';
import conceptoImg from '../assets/images/services/concepto-contenido.jpg';
import disenioImg from '../assets/images/services/disenio-branding.png';
import webImg from '../assets/images/services/web-y-experiencia.jpg';
import animationAndProductionImg from '../assets/images/services/animacion-producción-audiovisual.jpg';

const services = [
  {
    title: "Marketing & Estrategia",
    image: marketingImg.src,
    color: "#4A5FD9",
    bgGradient: "from-[#4A5FD9] to-[#6B7FE8]",
    services: [
      "Marketing Digital",
      "Paid Media",
      "Posicionamiento de marca",
      "Email Marketing",
      "Conversión Estratégica"
    ],
    button: "Comenzá Ahora"
  },
  {
    title: "Concepto & Contenido", 
    image: conceptoImg.src,
    color: "#EF5350",
    bgGradient: "from-[#EF5350] to-[#F77371]",
    services: [
      "Conceptualización Creativa",
      "Creación de Contenido (Digitales y Físicos)",
      "Copywriting y Storytelling",
      "Producción de Contenido Visual (AI, redes, piezas estáticas)"
    ],
    button: "Comenzá Ahora"
  },
  {
    title: "Diseño & Branding",
    image: disenioImg.src, 
    color: "#00ACC1",
    bgGradient: "from-[#00ACC1] to-[#26C6DA]",
    services: [
      "Identidad de Marca (Branding)",
      "Diseño Gráfico",
      "Creación de Mockups Digitales",
      "Diseño de Empaques",
      "Diseño Editorial",
      "Packaging",
      "Signage"
    ],
    button: "Comenzá Ahora"
  },
  {
    title: "Animación & Producción Audiovisual",
    image: animationAndProductionImg.src,
    color: "#BB8BFE",
    bgGradient: "from-[#BB8BFE] to-[#D4B3FF]",
    services: [
      "Motion Graphics",
      "Animación 2D / 3D", 
      "Producción de Video (filmación y edición)",
      "Fotografía Profesional"
    ],
    button: "Comenzá Ahora"
  },
  {
    title: "Web & Experiencia",
    image: webImg.src,
    color: "#13243C",
    bgGradient: "from-[#13243C] to-[#1E3A5F]",
    services: [
      "Desarrollo Web",
      "Diseño Web & App",
      "Experiencia de Usuario (UX/UI)",
      "Posicionamiento SEO"
    ],
    button: "Comenzá Ahora"
  }
];
---

<div class="w-full overflow-hidden">
  <div class="max-w-7xl mx-auto px-2 sm:px-4 md:px-6 lg:px-8 py-8 sm:py-12 lg:py-20">
    <!-- Unified container for title and carousel -->
    <div class="flex flex-col items-center justify-center w-full">
      <!-- Section Title -->
      <div class="text-center mb-10 sm:mb-12 md:mb-16 lg:mb-20">
        <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-semibold text-black text-3xl sm:text-4xl md:text-5xl lg:text-6xl leading-tight">
          Todo, en un solo
          <br />
          plan mensual
        </h2>
      </div>

      <!-- Advanced Carousel - Centered and aligned with title -->
      <div class="w-full overflow-visible flex justify-center">
        <ServicesCarousel client:load slides={services} />
      </div>
    </div>
  </div>
</div>
