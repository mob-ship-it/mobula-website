---
import { Image } from 'astro:assets';
import ArticlesCarousel from '../components/ArticlesCarousel';

import project1 from '../assets/images/projects/project-1.jpg';
import project2 from '../assets/images/projects/project-2.jpg';
import project3 from '../assets/images/projects/project-3.jpg';
import project4 from '../assets/images/projects/project-4.jpg';

const articles = [
  {
    id: 1,
    title: "Por qué en Mobula ofrecemos más que Marketing Digital",
    image: project1
  },
  {
    id: 2,
    title: "Por qué temerle a la inteligencia artificial",
    image: project2
  },
  {
    id: 3,
    title: "Cómo crear contenido que conecte con tu audiencia",
    image: project3
  },
  {
    id: 4,
    title: "El futuro del diseño web responsivo",
    image: project4
  }
];
---

<section class="bg-[#faf1ea] pt-0 pb-10 md:pt-0 md:pb-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="[font-family:'Bricolage_Grotesque',Helvetica] font-bold text-3xl md:text-4xl lg:text-5xl text-[#13243c] mb-12">
      Artículos destacados
    </h2>

    <ArticlesCarousel client:load articles={articles} />
  </div>
</section>
