        <div class="flex gap-6">
          <a 
            href={translatePath('/privacy')}
            onclick="openPolicyModal('privacy'); return false;"
            class="[font-family:'Be_Vietnam',Helvetica] text-sm text-[#faf1ea]/60 hover:text-[#bb8bfe] transition-colors"
          >
            {t('footer.privacy')}
          </a>
          <a 
            href={translatePath('/terms')}
            onclick="openPolicyModal('terms'); return false;"
            class="[font-family:'Be_Vietnam',Helvetica] text-sm text-[#faf1ea]/60 hover:text-[#bb8bfe] transition-colors"
          >
            {t('footer.terms')}
          </a>
        </div>
      </div>
    </div>
