---
import { Image } from 'astro:assets';
import SocialIcons from './SocialIcons.astro';
import PolicyModal from './PolicyModal.astro';
import mobulaLogo from '../assets/images/logo/mobula-logo-light.png';
import vector22 from '../assets/images/mockups/Vector 22.png';
import * as i18n from '../i18n/utils';
const lang = i18n.getLangFromUrl(Astro.url);
const t = i18n.useTranslations(lang);
const translatePath = i18n.useTranslatedPath(lang);
