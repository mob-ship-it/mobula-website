</footer>
<PolicyModal lang={lang} />

<script>
  (function(){
    function openPolicyModal(type){
      const id = type === 'terms' ? 'policy-modal-terms' : 'policy-modal-privacy';
      const el = document.getElementById(id);
      if(!el) return;
      el.classList.add('open');
      el.setAttribute('aria-hidden', 'false');
    }
    function closePolicyModal(el){
      if(!el) return;
      el.classList.remove('open');
      el.setAttribute('aria-hidden', 'true');
    }
    window.openPolicyModal = openPolicyModal;
    window.closePolicyModal = closePolicyModal;

    document.addEventListener('click', function(e){
      const target = e.target;
      if(!(target instanceof Element)) return;
      if(target.matches('[data-action="close"]') || target.closest('[data-action="close"]')){
        const modal = target.closest('.policy-modal');
        if(modal) closePolicyModal(modal);
      }
      if(target.matches('.policy-close')){
        const modal = target.closest('.policy-modal');
        if(modal) closePolicyModal(modal);
      }
    }, true);
  })();
</script>
